<html>
<head>
  <title>   </title>

  <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet"> 

  <style type="text/css">
    * {
  box-sizing: border-box;
      font-family: Arial;
}

@font-face {
  font-family: serif;
  src: url('http://fonts.googleapis.com/css?family=Droid+Serif');
}

@font-face {
  font-family: Lato;
  src: url("https://fonts.googleapis.com/css2?family=Lato&display=swap");
}

    body{
      font-family: Lato;
    }
    .column {
  float: left;
  padding: 10px;
  height: 1100px; /* Should be removed. Only for demonstration */
}

.left {
  width: 35%;
}

.right {  
  width: 65%;
}

p, li , td{

      font-size: 9px;
      font-family: Lato;
    }

h6 ,b {
    font-family: Lato;

}




/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

  </style>
</head>
<body>
  

  <div class="row">
      <div class="column left" style="background-color:#f4f4f4; color:#333f4f;">
        <h6 style="margin-top:80px"><b>INFO</b></h6>
        <hr>
          <table>
            <tr style="color:#333f4f;" >
              <td><b>Address </b></td>
              <td style="padding: 10px; word-wrap: break-word;"><%= personer.address %></td>

            </tr>

            <tr style="color:#333f4f;">
              <td><b>Phone </b></td>
              <td style="padding: 10px; word-wrap: break-word;"> <%= personer.phoneNumber %> </td>

            </tr>

            <tr style="color:#333f4f;">
              <td><b>Email </b></td>
              <td style="padding: 10px; word-wrap: break-word;"> <%= personer.email %></td>

            </tr>

          </table>
        
        <br>

      

        <h6 style="margin-top:40px"><b>SKILLS</b></h6>
        <hr>
          <p style="font-size: 9px;"><%= quality.qualities %></p>

      </div>

      <div class="column right" style="padding-left: 10px;" >
        <div align="center" style="background-color:#333f4f; color: #fff; margin-top: -30px; height: 100px; ">
            <br>
          <h3><%= personer.firstname + "  "+ personer.surname  %></h3>
          <p><%= personer.occupation.toUpperCase() %></p>
        </div>

          <br><br>
        <h6 style="margin-top:-23px"><b>PROFILE</b></h6>
        <hr style="margin-top: -3px;">
        <p>
          <%= profiler.profile %>
        </p>



        <h6><b>EMPLOYMENT HISTORY</b></h6>
        <hr style="margin-top: -15px;">

        <% experiences.values.work.forEach(function(item) { %>
        <div style="padding-bottom: 5px;">

        <p> <%= item.position %> , <%= item.employer %></p>
           <p style="margin-top: -7px;"> <%= item.jstartDate %> -   <%= item.jendDate %></p>
           <div style="margin-top: -5px;">
                <%- item.jdescription  %>
            </div>
        </div>

     <% }); %>

      
      <div style="margin-top: -5px;">
      <h6><b>EDUCATION</b></h6>
        <hr style="margin-top: -15px;">

        <% education.values.education.forEach(function(item) { %>
        <div>

          <p><%= item.schoolName %></p>
      <p style="margin-top: -7px;"><i><%= item.fieldOfStudy %> </i></p>
      <p style="margin-top: -5px;"><%= item.startDate %> -- <%= item.gradDate %></p>
        </div>

        <% }); %>
      </div>


        <h6><b>REFERENCE</b></h6>
        <hr style="margin-top: -15px;">

        <% reference.values.refree.forEach(function(item) { %>

        <div>
          <p><%= item.referent %>, <%= item.company %></p>
      <p style="margin-top: -7px;"><i><%= item.occupation %></i></p>
      <p style="margin-top: -5px;">Tel: <%= item.phone %></p>
        </div>

        <% }); %>

        


          
      </div>

  </div>

</body>
</html>
